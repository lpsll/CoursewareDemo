<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/tv_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/icon_tv_0" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp" >

                <TextView
                    android:id="@+id/tv_item_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="午茶剧场：刑警队长（26）  "
                    android:textColor="@color/green"
                    android:textSize="12sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                  
                    android:text="正在播放中...."
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <TextView
                android:id="@+id/tv_item_tv01"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:background="@color/red"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="券"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_item_tv02"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@color/yellow"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="折"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_item_tv03"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@color/blue"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="免"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_item_tv04"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@color/green"
                android:gravity="center"
                android:text="赠"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_item_tv05"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@color/blue"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="减"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>