<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <LinearLayout
        android:id="@+id/integral_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/integral_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/color_ff"
        android:gravity="center"
        android:layout_marginTop="@dimen/ds_70"
        android:textSize="@dimen/fs_130"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/animationIV"
        android:layout_width="@dimen/ds_150"
        android:layout_height="@dimen/ds_150"
        android:layout_marginTop="@dimen/ds_400"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/gold_a"
        />
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
       >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_110"
            android:layout_marginRight="@dimen/ds_110"
            android:layout_marginTop="200dp"
            android:background="@drawable/picture1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_480"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_200"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/ds_480"
               >
                <Button
                    android:id="@+id/tv_two"
                    android:layout_width="@dimen/ds_170"
                    android:layout_height="@dimen/ds_170"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:layout_marginRight="@dimen/ds_40"
                    android:layout_centerInParent="true"
                    android:background="@drawable/text_integral"
                    android:text="@string/two"
                    android:textColor="@color/color_ff"
                    android:textSize="@dimen/fs_30"/>

                <Button
                    android:id="@+id/tv_one"
                    android:scaleType="centerInside"
                    android:layout_width="@dimen/ds_170"
                    android:layout_height="@dimen/ds_170"
                    android:layout_toLeftOf="@+id/tv_two"
                    android:layout_centerVertical="true"
                    android:background="@drawable/text_integral"
                    android:gravity="center"
                    android:text="@string/one"
                    android:textColor="@color/color_ff"
                    android:textSize="@dimen/fs_30"/>


                <Button
                    android:id="@+id/tv_three"
                    android:layout_width="@dimen/ds_170"
                    android:layout_height="@dimen/ds_170"
                    android:layout_toRightOf="@+id/tv_two"
                    android:layout_centerVertical="true"
                    android:background="@drawable/text_integral"
                    android:gravity="center"
                    android:text="@string/three"
                    android:textColor="@color/color_ff"
                    android:textSize="@dimen/fs_30"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_180"
                android:layout_marginTop="@dimen/ds_30"
                >

                <LinearLayout
                    android:id="@+id/int_lin"
                    android:layout_width="@dimen/ds_400"
                    android:layout_height="@dimen/ds_170"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:orientation="horizontal">
                <Button
                    android:id="@+id/tv_five"
                    android:layout_width="@dimen/ds_170"
                    android:layout_height="@dimen/ds_170"
                    android:layout_marginLeft="@dimen/ds_10"
                    android:background="@drawable/text_integral"
                    android:text="@string/two"
                    android:textColor="@color/color_ff"
                    android:textSize="@dimen/fs_30"/>

                    <Button
                        android:id="@+id/tv_six"
                        android:layout_width="@dimen/ds_170"
                        android:layout_height="@dimen/ds_170"
                        android:layout_marginLeft="@dimen/ds_30"
                        android:background="@drawable/text_integral"
                        android:text="@string/three"
                        android:textColor="@color/color_ff"
                        android:textSize="@dimen/fs_30"/>

                </LinearLayout>
                <Button
                    android:id="@+id/tv_four"
                    android:layout_width="@dimen/ds_170"
                    android:layout_height="@dimen/ds_170"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/int_lin"
                    android:background="@drawable/text_integral"
                    android:text="@string/one"
                    android:textColor="@color/color_ff"
                    android:textSize="@dimen/fs_30"/>



                <Button
                    android:id="@+id/tv_server"
                    android:layout_width="@dimen/ds_170"
                    android:layout_height="@dimen/ds_170"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/int_lin"
                    android:background="@drawable/text_integral"
                    android:text="@string/three"
                    android:textColor="@color/color_ff"
                    android:textSize="@dimen/fs_30"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_30"
                android:gravity="center"
                android:textColor="@color/green_light"
                android:textSize="@dimen/fs_55"
                android:text="@string/rule"/>
            
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
